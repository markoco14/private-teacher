            </div>
        </section>


        {{/* CONTACT SECTION */}}
        <section id="contact" class="bg-gradient-to-r from-purple-700/80 to-purple-800/80 text-white py-24 md:py-24">
            <div class="hide max-w-[500px] mx-auto bg-white text-black px-6 py-6 sm:rounded-2xl">
                <h2 class="text-2xl font-semibold text-purple-900 mb-2">
                    {{ .NewContent.Contact.Headline }}
                </h2>
                <p>
                    {{ .NewContent.Contact.Description }}
                </p>
                <div  class="my-4 text-center text-purple-900 font-semibold text-xl">
                    <h3>{{ .NewContent.Contact.Line }}</h3>
                    <hr />
                </div>
                <img 
                    id="line" 
                    loading="lazy" 
                    src="https://teacher-mark.s3.ap-southeast-1.amazonaws.com/tr-mark-qr.jpg" 
                    class="w-full max-w-[200px] mx-auto"/>
                <div  class="my-4 text-center text-purple-900 font-semibold text-xl">
                    <h3>
                        {{ .NewContent.Contact.Email }}
                    </h3>
                    <hr />
                </div>
                {{ template "form" . }}
            </div>
        </section>


        {{/* FAQ SECTION */}}
        <section id="faq">
            <div class="py-16 mx-auto px-4 sm:px-0 bg-deep text-white">
                <div class="hide max-w-[700px] mx-auto">
                    <h2 class="text-4xl mb-8">
                    {{ .Content.faq_headline }}
                    </h2>
                    {{- range .Faq }}
                    <details name="faq" class="text-xl">
                        <summary class="cursor-pointer">{{.Question}}</summary>
                        <p class="text-lg text-purple-50/90 pt-2">{{.Answer}}</p>
                    </details>
                    <hr class="my-4"/>
                    {{- end}}
                    {{/* <dl>
